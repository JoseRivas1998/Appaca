<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bluePastel"
    tools:context=".activities.ShopActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/shop_food_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shop_food_tab_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/food_stat" />

            <TextView
                android:id="@+id/shop_food_tab_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food"
                android:textSize="20dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/shop_clothing_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shop_clothing_tab_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clothing_icon" />

            <TextView
                android:id="@+id/shop_clothing_tab_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clothing"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shop_alpacas_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shop_alpacas_tab_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/alpaca_shop_icon" />

            <TextView
                android:id="@+id/shop_alpacas_tab_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alpacas"
                android:textSize="20dp" />

        </LinearLayout>
    </LinearLayout>


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/shop_view_pager"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" />

</LinearLayout>