<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellowPastel"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/main_alpaca_name_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TEMP"
                android:textAlignment="center"
                android:textSize="@dimen/main_alpaca_name_size"
                app:layout_constraintBottom_toBottomOf="@id/main_top_bar"
                app:layout_constraintLeft_toLeftOf="@id/main_top_bar"
                app:layout_constraintRight_toRightOf="@id/main_top_bar"
                app:layout_constraintTop_toTopOf="@id/main_top_bar" />

            <ImageButton
                android:id="@+id/main_settings_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:paddingRight="@dimen/hud_padding"
                android:src="@drawable/ic_settings_black_24dp"
                app:layout_constraintBottom_toBottomOf="@id/main_top_bar"
                app:layout_constraintRight_toRightOf="@id/main_top_bar"
                app:layout_constraintTop_toTopOf="@id/main_top_bar" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:id="@+id/stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            app:layout_constraintTop_toTopOf="@id/mainView">

            <FrameLayout
                android:id="@+id/stat_bars"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <fragment
                    android:id="@+id/main_view_currency_alpacas"
                    android:name="edu.csuci.appaca.fragments.CurrencyDisplayFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    tools:layout="@layout/fragment_currency_display" />

                <fragment
                    android:id="@+id/main_view_currency_other"
                    android:name="edu.csuci.appaca.fragments.CurrencyDisplayFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    tools:layout="@layout/fragment_currency_display" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/top_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d2d2d2d2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_center_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/main_libGDX_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="@id/main_center_layout"
            app:layout_constraintLeft_toLeftOf="@id/main_center_layout"
            app:layout_constraintRight_toRightOf="@id/main_center_layout"
            app:layout_constraintTop_toTopOf="@id/main_center_layout" />

        <ProgressBar
            android:id="@+id/main_upload_indicator"
            android:visibility="gone"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/hud_padding"
            android:layout_marginEnd="@dimen/hud_padding"
            app:layout_constraintRight_toRightOf="@id/main_center_layout"
            app:layout_constraintTop_toTopOf="@id/main_center_layout" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d2d2d2d2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:background="@color/pinkPastel"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/feedBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_view_dock_margin"
            android:layout_marginRight="@dimen/main_view_dock_margin"
            android:layout_weight="1"
            android:src="@drawable/fridge" />

        <ImageView
            android:id="@+id/clothesBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_view_dock_margin"
            android:layout_marginRight="@dimen/main_view_dock_margin"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/closet" />

        <ImageView
            android:id="@+id/shopBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_view_dock_margin"
            android:layout_marginRight="@dimen/main_view_dock_margin"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:src="@drawable/shop" />

        <ImageView
            android:id="@+id/playBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/main_view_dock_margin"
            android:layout_marginRight="@dimen/main_view_dock_margin"
            android:layout_weight="1"
            android:src="@drawable/games" />
    </LinearLayout>
</LinearLayout>