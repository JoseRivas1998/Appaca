<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    tools:context=".fragments.IconBadgeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/icon_badge_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icon_badge_icon"
            android:layout_width="@dimen/icon_badge_icon_size"
            android:layout_height="@dimen/icon_badge_icon_size"
            app:layout_constraintTop_toTopOf="@id/icon_badge_layout"
            app:layout_constraintLeft_toLeftOf="@id/icon_badge_layout"
            />

        <TextView
            android:id="@+id/icon_badge_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/icon_badge_icon"
            app:layout_constraintRight_toRightOf="@id/icon_badge_icon"
            android:background="@drawable/badge"
            android:textSize="20dp"
            android:text="0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>