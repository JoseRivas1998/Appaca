<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:id="@+id/stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toTopOf="@id/mainView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp">

            <View
                android:layout_width="48dp"
                android:layout_height="36dp"
                android:background="#00FF00"
                app:layout_constraintBottom_toBottomOf="@id/foodStatImg"
                app:layout_constraintLeft_toLeftOf="@id/foodStatImg"
                app:layout_constraintRight_toRightOf="@id/foodStatImg" />

            <ImageView
                android:id="@+id/foodStatImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/food_stat" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp">

            <View
                android:layout_width="49dp"
                android:layout_height="21dp"
                android:background="#00FF00"
                app:layout_constraintBottom_toBottomOf="@id/happinessStatImg"
                app:layout_constraintLeft_toLeftOf="@id/happinessStatImg"
                app:layout_constraintRight_toRightOf="@id/happinessStatImg" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/happinessStatImg"
                android:src="@drawable/happiness_stat" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp">

            <View
                android:layout_width="48dp"
                android:layout_height="49dp"
                android:background="#00FF00"
                app:layout_constraintBottom_toBottomOf="@id/hygeineStatImg"
                app:layout_constraintLeft_toLeftOf="@id/hygeineStatImg"
                app:layout_constraintRight_toRightOf="@id/hygeineStatImg" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hygeineStatImg"
                android:src="@drawable/hygeine_stat" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/stamina"
                android:id="@+id/staminaIcon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="#FFF"
                android:textSize="16pt"
                app:layout_constraintRight_toRightOf="@id/staminaIcon"
                app:layout_constraintLeft_toLeftOf="@id/staminaIcon"
                app:layout_constraintTop_toTopOf="@id/staminaIcon"
                app:layout_constraintBottom_toBottomOf="@id/staminaIcon"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12pt"
            android:textColor="#FFF"
            android:layout_marginRight="10dp"
            android:text="4:36"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/curr1ico"
                android:id="@+id/curr1Icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="87"
                android:textColor="#FFF"
                android:textSize="10pt"
                app:layout_constraintRight_toRightOf="@id/curr1Icon"
                app:layout_constraintLeft_toLeftOf="@id/curr1Icon"
                app:layout_constraintTop_toTopOf="@id/curr1Icon"
                app:layout_constraintBottom_toBottomOf="@id/curr1Icon"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            >
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/curr2ico"
                android:id="@+id/curr2Icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textColor="#FFF"
                android:textSize="10pt"
                app:layout_constraintRight_toRightOf="@id/curr2Icon"
                app:layout_constraintLeft_toLeftOf="@id/curr2Icon"
                app:layout_constraintTop_toTopOf="@id/curr2Icon"
                app:layout_constraintBottom_toBottomOf="@id/curr2Icon"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <View
        android:id="@+id/top_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/stats"
        android:background="#d2d2d2d2" />



    <FrameLayout
        android:id="@+id/main_libGDX_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@id/bottom_divider"
        app:layout_constraintHeight_default="spread"
        app:layout_constraintTop_toBottomOf="@id/top_divider" />

    <View
        android:id="@+id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toTopOf="@id/main_action_menu"
        android:background="#d2d2d2d2" />

    <ScrollView
        android:id="@+id/main_action_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/mainView"

        app:layout_constraintTop_toBottomOf="@id/main_libGDX_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/feedBtn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Feed" />

            <Button
                android:id="@+id/clothesBtn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Clothes" />

            <Button
                android:id="@+id/shearBtn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Shear" />

            <Button
                android:id="@+id/shopBtn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Shop" />

            <Button
                android:id="@+id/playBtn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Play" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>