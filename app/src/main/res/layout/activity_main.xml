<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <LinearLayout
        android:id="@+id/stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toTopOf="@id/mainView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp">

            <ImageView
                android:id="@+id/curr1Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/curr1ico" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="87"
                android:textColor="#FFF"
                android:textSize="10pt"
                app:layout_constraintBottom_toBottomOf="@id/curr1Icon"
                app:layout_constraintLeft_toLeftOf="@id/curr1Icon"
                app:layout_constraintRight_toRightOf="@id/curr1Icon"
                app:layout_constraintTop_toTopOf="@id/curr1Icon" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/stat_bars"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp">

            <ImageView
                android:id="@+id/curr2Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/curr2ico" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="87"
                android:textColor="#FFF"
                android:textSize="10pt"
                app:layout_constraintBottom_toBottomOf="@id/curr2Icon"
                app:layout_constraintLeft_toLeftOf="@id/curr2Icon"
                app:layout_constraintRight_toRightOf="@id/curr2Icon"
                app:layout_constraintTop_toTopOf="@id/curr2Icon" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <View
        android:id="@+id/top_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d2d2d2d2" />

    <FrameLayout
        android:id="@+id/main_libGDX_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:id="@+id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d2d2d2d2" />

    <ScrollView
        android:id="@+id/main_action_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/feedBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/main_view_dock_margin"
                android:layout_marginRight="@dimen/main_view_dock_margin"
                android:src="@drawable/fridge" />

            <ImageView
                android:id="@+id/clothesBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/main_view_dock_margin"
                android:layout_marginRight="@dimen/main_view_dock_margin"
                android:src="@drawable/closet" />

            <ImageView
                android:id="@+id/shearBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/main_view_dock_margin"
                android:layout_marginRight="@dimen/main_view_dock_margin"
                android:src="@drawable/shears" />

            <ImageView
                android:id="@+id/shopBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/main_view_dock_margin"
                android:layout_marginRight="@dimen/main_view_dock_margin"
                android:src="@drawable/shop" />

            <ImageView
                android:id="@+id/playBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/main_view_dock_margin"
                android:layout_marginRight="@dimen/main_view_dock_margin"
                android:src="@drawable/games" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>